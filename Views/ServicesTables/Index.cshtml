@model IEnumerable<The_New_Paradise.Models.ServicesTable>

@{
    ViewBag.Title = "Index";
}

<h2>OUR SERVICES</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
    <div class="card d-block w-100" style="width: 300px;height:500px;border:1px solid purple; background-color:black;display:grid;;text-align:left;color:gold; font-family:Calibri;display:inline-grid;">
        <img src="@Url.Content("~/Upload/"+item.Service_Image)" style="height:200px; width:300px;" class="card-img-top" alt="...">
        <div class="card-body">
            <div class="row">
                <div class="col-md-12"  style="margin-top: 15px;margin-left:5px;">
                    <b>Name:</b>
                    @Html.DisplayFor(modelItem => item.Service_Namee)<br />
                    <b>Price:</b>
                    @Html.DisplayFor(modelItem => item.Service_Price) <p style="display:inline-block">INR</p> <br />
                    <b>Duration:</b>
                    @Html.DisplayFor(modelItem => item.Service_Time) <p style="display:inline-block">minutes</p>
                </div>
                <div class="col-md-1" style="margin-top: 25px; align-items:center;">
                    <a class="btn btn-primary">ADD TO CART</a>
                </div>
            </div>
            <hr class="dropdown-divider">
            <div style="margin-left:18px;margin-right:15px;margin-top:10px;color:gainsboro">
                @Html.DisplayFor(modelItem => item.Service_Description)<br /><br />
            </div>
            <p class="card-text"></p>
        </div>
    </div>
  
    }
